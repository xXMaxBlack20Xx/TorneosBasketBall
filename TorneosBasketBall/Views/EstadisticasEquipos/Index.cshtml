@model IEnumerable<TorneosBasketBall.Models.EstadisticasEquipos>

@{
    ViewData["Title"] = "Estadísticas por Equipo";
}

<div class="container mt-4">
    <!-- Título + botones -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Estadísticas por Equipo</h2>
        <div>
            <a asp-action="Create" class="btn btn-success btn-sm me-2">
                <i class="bi bi-plus-lg"></i> Nueva Estadística
            </a>
            <form asp-action="ComputeStatistics" method="post" class="d-inline">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-calculator"></i> Calcular Estadísticas
                </button>
            </form>
        </div>
    </div>

    <!-- Buscador “live” -->
    <div class="mb-3">
        <input id="searchInput" type="text" class="form-control" placeholder="🔍 Buscar equipo...">
    </div>

    <!-- Tabla dentro de tarjeta -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>Equipo</th>
                            <th>Jugados</th>
                            <th>Ganados</th>
                            <th>Perdidos</th>
                            <th>Puntos a Favor</th>
                            <th>Puntos en Contra</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Equipo?.NombreEquipo</td>
                                <td>@item.PartidosJugados</td>
                                <td>@item.Ganados</td>
                                <td>@item.Perdidos</td>
                                <td>@item.PuntosFavor</td>
                                <td>@item.PuntosContra</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.EquipoID"
                                       class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.EquipoID"
                                       class="btn btn-sm btn-outline-secondary me-1" title="Ver detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.EquipoID"
                                       class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function () {
            var filter = this.value.toLowerCase();
            document
                .querySelectorAll('table tbody tr')
                .forEach(function (row) {
                    row.style.display = row.textContent.toLowerCase().includes(filter)
                        ? ''
                        : 'none';
                });
        });
    </script>
}
