@model IEnumerable<TorneosBasketBall.Models.Jugador>

@{
    ViewData["Title"] = "Jugadores";
}

<div class="container mt-4">
    <!-- Título + botón Crear -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Jugadores Registrados</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Nuevo Jugador
        </a>
    </div>

    <!-- Buscador live -->
    <div class="mb-3">
        <input id="searchInput" type="text" class="form-control" placeholder="🔍 Buscar jugador...">
    </div>

    <!-- Tabla dentro de card -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th>Nombre Completo</th>
                            <th>Edad</th>
                            <th>Posición</th>
                            <th>N° Camiseta</th>
                            <th>Estado</th>
                            <th>Equipo</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NombreCompleto</td>
                                <td>@item.Edad</td>
                                <td>@item.Posicion</td>
                                <td>@item.NumeroCamiseta</td>
                                <td>
                                    @if (item.Estado)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                                <td>@item.Equipo?.NombreEquipo</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.JugadorID"
                                       class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.JugadorID"
                                       class="btn btn-sm btn-outline-secondary me-1" title="Ver detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.JugadorID"
                                       class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function () {
            var filter = this.value.toLowerCase();
            document
                .querySelectorAll('table tbody tr')
                .forEach(function (row) {
                    row.style.display = row.textContent.toLowerCase().includes(filter)
                        ? ''
                        : 'none';
                });
        });
    </script>
}
