﻿@{
    Layout = "_Layout";
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 mt-4">
            <div class="card-body">
                <!-- Imagen arriba del formulario -->
                <div class="text-center mb-3">
                    <img src="https://gaceta.uabc.mx/sites/default/files/styles/max_1900x1900/public/2017-10/Se%20llevaron%20a%20cabo%20Juegos%20Deportivos%20Universitarios%20UABC04.webp?itok=2sLpw1th"
                         alt="Juegos Deportivos UABC" class="img-fluid rounded" style="max-height:280px; object-fit:cover;" />
                </div>
                <h2 class="text-center mb-4">Iniciar Sesión</h2>

                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Usuario:</label>
                        <input type="text" name="usuario" required class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contraseña:</label>
                        <input type="password" name="contrasenia" required class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Entrar</button>
                </form>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                }
            </div>
        </div>
    </div>
</div>