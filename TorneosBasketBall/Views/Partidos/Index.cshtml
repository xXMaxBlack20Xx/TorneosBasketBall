@model IEnumerable<TorneosBasketBall.Models.Partidos>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Partidos";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="GenerateRoundRobin" method="post" class="d-inline">
    <button type="submit" class="btn btn-warning">New Round Robin</button>
</form>
<form asp-action="ComputePlayoffs" method="post" class="d-inline ms-2">
    <button type="submit" class="btn btn-success">Compute Playoffs</button>
</form>
<form asp-action="ComputeFinal" method="post" class="d-inline ms-2">
    <button type="submit" class="btn btn-danger">Generate Final</button>
</form>

<table class="table table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Local</th>
            <th>Visitante</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Score</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.PartidoID</td>
                <td>@p.EquipoLocalID</td>
                <td>@p.EquipoVisitanteID</td>
                <td>@p.FechaHora:d</td>
                <td>@p.Estado</td>
                <td>@(p.PuntuacionLocal?.ToString() ?? "-") – @(p.PuntuacionVisitante?.ToString() ?? "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.PartidoID" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@p.PartidoID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>