@model List<TorneosBasketBall.Models.Partidos>

@{
    ViewData["Title"] = "Round-Robin Simulation";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Index" class="btn btn-secondary">← Back to Teams</a>
</p>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Local</th>
            <th>Visitante</th>
            <th>Score</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var g = Model[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@g.EquipoLocalID</td>
                <td>@g.EquipoVisitanteID</td>
                <td>@g.PuntuacionLocal – @g.PuntuacionVisitante</td>
                <td>@g.FechaHora.ToString("d")</td>
            </tr>
        }
    </tbody>
</table>
