@model TorneosBasketBall.Models.AdminCardModel

<div class="col-12 col-sm-6 col-md-4 col-lg-3">
    <div class="card h-100 shadow-sm border-0">
        <div class="card-body d-flex flex-column text-center">
            <div class="mb-3">
                <i class="@(Model.IconClass) display-4 text-primary"></i>
            </div>
            <h5 class="card-title mb-2">@Model.Title</h5>
            <p class="card-text text-muted flex-grow-1">@Model.Description</p>
            <a asp-controller="@Model.Controller"
               asp-action="@Model.Action"
               class="btn @Model.BtnClass mt-3">
                Ir
            </a>
        </div>
    </div>
</div>
