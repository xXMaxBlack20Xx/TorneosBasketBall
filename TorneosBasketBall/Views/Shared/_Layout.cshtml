@{
    ViewData["Title"] = "Iniciar Sesión";
    // Opcionalmente: Layout = "_Layout"; // Esto se asume por defecto si no lo pones.
}

<h2>Iniciar Sesión</h2>

<div class="alert alert-primary" role="alert">
    Si ves este cuadro azul, Bootstrap está activo 🎉
</div>

<form method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Usuario:</label>
        <input type="text" name="usuario" required class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Contraseña:</label>
        <input type="password" name="contrasenia" required class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}

<br />

<a asp-controller="Equipoes" asp-action="ReadOnly" class="btn btn-outline-secondary mt-3">
    Ver Equipos (Solo Lectura)
</a>
